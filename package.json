{
  "name": "ben-mclean-portfolio",
  "version": "0.1.0",
  "homepage": "http://BenMcLean981.github.io",
  "license": "UNLICENSED",
  "private": false,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.16",
    "prism-react-renderer": "^1.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-element-to-jsx-string": "^14.3.4",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "seedrandom": "^3.0.5",
    "web-vitals": "^2.1.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:all": "react-scripts test --all --watchAll=false",
    "test:coverage": "react-scripts test --all --watchAll=false --coverage || exit 0",
    "eject": "react-scripts eject",
    "analyze": "source-map-explorer 'build/static/js/*'",
    "predeploy": "yarn build && yarn test:coverage && yarn check-images",
    "deploy": "gh-pages -d build",
    "check-images": "if [ $(du -a public/images/* | sort -n -r | head -n 1 | cut -f1) -gt 200 ]; then exit 1; else exit 0; fi"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.18.6",
    "@craco/craco": "^6.4.3",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.2",
    "gh-pages": "^3.2.3",
    "postcss": "^8.4.5",
    "react-scripts": "^5.0.0",
    "source-map-explorer": "^2.5.2",
    "tailwindcss": "^3.0.12",
    "typescript": "^4.5.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*.{js,jsx,ts,tsx}",
      "src/hooks/**/*.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
